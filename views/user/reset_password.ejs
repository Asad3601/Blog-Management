    <link href="/public/css/theme.css" rel="stylesheet" media="all">

</head>

<body class="animsition">
    <div class="page-wrapper">
        <div class="page-content--bge5">
            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            <h3><strong>Rest Password </strong></h3>
                        </div>
                        <div class="login-form">
                            <form action="/reset-password" method="post">

                                <div class="form-group mt-2">
                                    <input type="hidden" name="user_id" value="<%= user_id %>">
                                </div>
                                <div class="form-group mt-2">

                                    <input class="au-input au-input--full" type="password" name="password1" placeholder="Enter Your New Pasword">
                                </div>
                                <div class="form-group mt-2">

                                    <input class="au-input au-input--full" type="password" name="password2" placeholder="Enter Again Your Password" />
                                </div>

                                <%
                                if(typeof message !=='undefined'){
                                  %>
                                    <p style="color: red; font-size: 14px;">
                                        **
                                        <%= message %>
                                    </p>

                                    <%
                                }
                      
                               %>
                                        <button class="au-btn au-btn--block au-btn--green m-b-20 mt-2" type="submit">Submit</button>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Jquery JS-->
    <script src="/public/vendor/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap JS-->
    <script src="/public/vendor/bootstrap-4.1/popper.min.js"></script>
