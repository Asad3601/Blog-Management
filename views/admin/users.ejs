<div class="container">
    <% if(typeof post_message !=='undefined'){ %>
        <p style="color: green;">
            <%= post_message %>
        </p>
        <% } %>

            <h1 class=" mt-2">Users</h1>
            <!-- Center the heading -->

            <div class="d-flex justify-content-center mt-4">
                <!-- Center the table -->
                <table class="table table-bordered mx-auto w-75">
                    <!-- Set width and center -->
                    <thead class="thead-dark">
                        <tr>
                            <th>Image</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th colspan="3">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach((item) => { %>
                            <tr>
                                <td>
                                    <img src="<%= item.image %>" alt="" srcset="" width="30px" height="30px">
                                    <%= item.image %>
                                </td>
                                <td>
                                    <%= item.username %>
                                </td>
                                <td>
                                    <%= item.email %>
                                </td>
                                <td><a href="/user/<%= item.id %>" class="btn btn-primary">View</a></td>
                                <td><a href="/edit/<%= item.id %>" class="btn btn-secondary">Edit</a></td>
                                <td><a href="/delete/<%= item.id %>" class="btn btn-danger">Delete</a></td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
</div>